<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mrm1st3r.cards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <application
        android:name=".Cards"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".lobby.LobbyCreateActivity"
            android:label="@string/title_activity_lobby_create"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.MainActivity" />
        </activity>
        <activity
            android:name=".lobby.LobbyJoinActivity"
            android:label="@string/title_activity_lobby_join" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.MainActivity" />
        </activity>
        <activity
            android:name=".lobby.LobbyActivity"
            android:label="@string/title_activity_lobby"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.lobby.LobbyJoinActivity" />
        </activity>
        <activity
            android:name="com.github.mrm1st3r.cards.game.ui.HostGameActivity"
            android:label="@string/title_activity_game" 
            android:configChanges="orientation|keyboardHidden|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.MainActivity" />
        </activity>
        <activity
            android:name="com.github.mrm1st3r.cards.game.ui.ClientGameActivity"
            android:label="@string/title_activity_game" 
            android:configChanges="orientation|keyboardHidden|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.MainActivity" />
        </activity>
        <activity
            android:name="com.github.mrm1st3r.cards.game.ui.BotGameActivity"
            android:label="@string/title_activity_game" 
            android:configChanges="orientation|keyboardHidden|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.MainActivity" />
        </activity>
        <activity
            android:name=".RulesActivity"
            android:label="@string/title_activity_rules" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.mrm1st3r.cards.MainActivity" />
        </activity>
    </application>

</manifest>
